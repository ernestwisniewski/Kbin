{% extends 'base.html.twig' %}

{% block title %}{{ 'stats'|trans }} | /m/{{ magazine.name }} | {{ parent() }}{% endblock %}

{% block body %}
    <div class="kbin-magazine-moderators-page">
        {% include 'magazine/panel/_tabs.html.twig' %}
        {% include '_layout/_flash.html.twig' %}

        <ul class="nav nav-pills mb-5">
            <li class="nav-item" role="presentation">
                <button class="nav-link active text-reset" id="pills-activity-tab" data-bs-toggle="pill" data-bs-target="#pills-activity"
                        type="button" role="tab" aria-controls="pills-activity" aria-selected="true">{{ 'activity'|trans }}</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link text-reset" aria-selected="false">{{ 'votes'|trans }}</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link text-reset" aria-selected="false">{{ 'views'|trans }}</button>
            </li>
        </ul>

        <div class="mb-3">
            <label>
                <select name="forma" onchange="location = this.value;">
                    <option value="{{ path('magazine_panel_front', {name: magazine.name}) }}">Wszystkie</option>
                    <option value="{{ path('magazine_panel_front', {name: magazine.name, type: '-', period: 7}) }}"  {{ period is same as '7' ? 'selected' : '' }}>{{ 'week'|trans }}</option>
                    <option value="{{ path('magazine_panel_front', {name: magazine.name, type: '-', period: 14}) }}" {{ period is same as '14' ? 'selected' : '' }}>2 {{ 'weeks'|trans }}</option>
                    <option value="{{ path('magazine_panel_front', {name: magazine.name, type: '-', period: 31}) }}" {{ period is same as '31' ? 'selected' : '' }}>{{ 'month'|trans }}</option>
                    <option value="{{ path('magazine_panel_front', {name: magazine.name, type: '-', period: 183}) }}" {{ period is same as '183' ? 'selected' : '' }}>6 {{ 'months'|trans }}</option>
                    <option value="{{ path('magazine_panel_front', {name: magazine.name, type: '-', period: 256}) }}" {{ period is same as '256' ? 'selected' : '' }}>{{ 'year'|trans }}</option>
                </select>
            </label>
        </div>

        <div class="tab-content">
            <div>
                {{ render_chart(contentChart) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {% include 'magazine/_sidebar.html.twig' %}
{% endblock %}
