<section{{ attributes.defaults({class: 'magazine section'}) }}>
    <h3>{{ 'category'|trans }}</h3>
    <div class="row">
        <header>
            <h4><a href="{{ category_url(category) }}"
                   class="{{ html_classes({'stretched-link': false}) }}">{{ computed.category.name }}</a></h4>
        </header>
    </div>
    {{ component('category_sub', {category: category}) }}
    {% if computed.category.description %}
        <div class="content magazine__description">{{ computed.category.description|markdown|raw }}</div>
    {% endif %}
    <ul class="info">
        <li>{{ 'created_at'|trans }}:
            {{ component('date', {date: computed.category.createdAt}) }}
        </li>
        <li>{{ 'owner'|trans }}: <span>{{ component('user_inline', {user: computed.category.user}) }}</span></li>
        <li>{{ 'subscribers'|trans }}: <span>{{ computed.category.subscriptionsCount }}</span></li>
    </ul>
    <h3 class="mt-3">{{ 'magazines'|trans }}</h3>
    <div class="mt-2">
        {% for magazine in category.getMagazines() %}
            <small>
                <a class="badge" href="{{ path('front_magazine', {name: magazine.name}) }}">{{ magazine.name }}</a>
            </small>
        {% endfor %}
    </div>
</section>
