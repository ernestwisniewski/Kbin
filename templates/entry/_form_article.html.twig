{{ form_start(form) }}

<div class="kbin-magazine-create-form">
    <div class="col-lg-6 mb-3">
        <div class="input-group-lg mb-3">
            {{ form_label(form.title, 'Tytuł') }}
            {{ form_widget(form.title, {'attr': {'data-entry-create-target': 'title' }}) }}
        </div>

        <div class="input-group-lg mb-3">
            {{ form_label(form.magazine, 'Magazyn') }}
            {{ form_widget(form.magazine, {'attr': {'class': 'kbin-choices'}}) }}
        </div>

        <div class="input-group-lg mb-3">
            {{ form_label(form.badges, 'Etykiety') }}
            {{ form_widget(form.badges, {'attr': {'class': ''}}) }}
        </div>
    </div>
