{{ form_start(form) }}
<div class="col-lg-6 mb-3">
    <div class="kbin-magazine-create-form">
        {% if form.image is defined %}
            <div class="row me-0 pe-0">
                <div class="input-group-lg mb-3 row">
                    <div class="col-11">
                        {{ form_label(form.image, 'Obraz') }}
                        {{ form_widget(form.image, {'attr':{ 'class': 'form-control' }}) }}
                    </div>
                    <div class="col-1 pt-4">
                        <a href="{{ path('entry_create', { type: 'link' }) }}" class="link-dark">
                            <i class="fas fa-link pt-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="input-group-lg mb-3">
            {{ form_label(form.title, 'Tytuł') }}
            {{ form_widget(form.title, {'attr': {'data-entry-create-target': 'title' }}) }}
        </div>

        <div class="input-group-lg mb-3">
            {{ form_label(form.magazine, 'Magazyn') }}
            {{ form_widget(form.magazine, {'attr': {'class': 'kbin-choices'}}) }}
        </div>

        <div class="input-group-lg mb-3">
            {{ form_label(form.badges, 'Etykiety') }}
            {{ form_widget(form.badges, {'attr': {'class': ''}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.isAdult, 'Wyłącznie dla dorosłych') }}
            <div class="input-group input-group-lg">
                {{ form_widget(form.isAdult, {name: 'Wyłącznie dla dorosłych'}) }}
            </div>
        </div>

        <div class="mb-12 text-end">
            {{ form_row(form.submit, { 'label': 'Gotowe', 'attr': { 'data-entry-create-target': 'sendButton' }}) }}
        </div>
    </div>
</div>
{{ form_end(form) }}
