{% from '_layout/_not_found.html.twig' import not_found %}
{% from 'entry/comment/_macros.html.twig' import comment %}

<div class="kbin-comment-list mt-3" data-controller="comment-list"
   data-action="notify:EntryCommentNotification@window->comment-list#add"
   {% if magazine is defined and magazine %}data-comment-list-subject-id-value="{{ entry.id }}"{% endif %}>
    {% if comments|length %}
        {% for comment in comments %}
            {{ comment(comment, {
                self: app.user,
                comment: comment,
                extra_classes: 'kbin-comment-list-item mb-0',
                nested: nested ?? true,
                with_parent: with_parent ?? false
            }) }}
        {% endfor %}

        {% for i in 2..8 %}
            <div class="kbin-comment-line--{{ i }}"></div>
        {% endfor %}
    {% else %}
        {{ not_found() }}
    {% endif %}
</div>

{% if(comments.haveToPaginate) %}
    {{ pagerfanta(comments, null, {'pageParameter':'[strona]'}) }}
{% endif %}
