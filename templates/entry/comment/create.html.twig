{% extends 'entry/single.html.twig' %}
{% from 'entry/comment/_macros.html.twig' import comment %}

{% block title %}{{ 'reply'|trans }}{% endblock %}

{% block body %}
    {{ parent() }}
{% endblock %}

{% block after_entry %}
    {% if comment is defined and comment %}
        <section class="kbin-comment-wrapper mt-4">
            {{ comment(parent, {
                self: app.user,
                comment: parent,
                extra_classes: 'kbin-comment-list-item mb-0'
            }) }}
        </section>
    {% endif %}

    {% include 'entry/comment/_form.html.twig' %}
{% endblock %}
