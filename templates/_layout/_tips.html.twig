{% from '_layout/_not_found.html.twig' import not_found_transactions %}

<div class="kbin-tips-page mt-3 mt-sm-5">
    <div class="kbin-profile-tips mt-lg-4">
        <div class="col-lg-6">
            <div class="kbin-cardano-background"></div>

            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button"
                            role="tab" aria-controls="pills-home" aria-selected="true">{{ 'external_transfer'|trans }}
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button"
                            role="tab" aria-controls="pills-profile" aria-selected="false">{{ 'mnemonic'|trans }}
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button"
                            role="tab" aria-controls="pills-contact" aria-selected="false">{{ 'hardware_wallet'|trans }}
                    </button>
                </li>
            </ul>

            <div class="tab-content clearfix" id="pills-tabContent">
                <div class="tab-pane fade show active my-5" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                    <label for="copyWallet">{{ 'wallet_address'|trans }}</label>
                    <div class="input-group input-group-xl"
                         data-controller="clipboard"
                         data-clipboard-success-content="Skopiowano!">
                        <input type="text"
                               id="copyWallet"
                               class="form-control"
                               aria-label="Skopiuj ID portfela"
                               aria-describedby="copyWalletId"
                               data-clipboard-target="source"
                               value="{{ entry.user.cardanoWalletId }}">
                        <button class="input-group-text" id="copyWalletBtn" data-action="clipboard#copy"
                                data-clipboard-target="button">{{ 'copy'|trans }}</button>
                    </div>

                    <p class="mt-5">
                        {{ 'dont_have_wallet_yet'|trans({'%link_start%' : '<a class="font-weight-bold" href="#"  data-bs-toggle="modal" data-bs-target="#cardanoWallet">', '%link_end%' : '</a>'}) | raw }}
                    </p>

                    <ul class="ms-3">
                        <li><a href="#">{{ 'tip_link_1'|trans }}</a></li>
                        <li><a href="#">{{ 'tip_link_2'|trans }}</a> <small>({{ 'recommended'|trans }})</small></li>
                        <li><a href="#">{{ 'tip_link_3'|trans }}</a></li>
                        <li><a href="#">{{ 'tip_link_4'|trans }}</a></li>
                        <li><a href="#">{{ 'tip_link_5'|trans }}</a></li>
                    </ul>

                    <div class="modal" tabindex="-1" data-bs-toggle="modal" id="cardanoWallet">
                        <div class="modal-dialog modal-dialog-centered modal-xl">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">{{ 'create_new_wallet'|trans }}</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>{{ 'create_new_wallet_desc'|trans|raw }}</p>

                                    <div class="my-5 input-group-lg">
                                        <input class="form-control" placeholder="coming soon...">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary">{{ 'create_new_wallet_apply'|trans }}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                    <div class="alert alert-primary" role="alert">
                        <small>Here you can use your mnemonic to access your wallet.</small>
                    </div>

                    <div class="my-5  input-group-lg">
                        <label for="cardanoWallet" class="form-label"><small>Enter the 12, 15, 24 or 27-word wallet mnemonic seed
                                phrase</small></label>
                        <input class="form-control" id="cardanoWallet" placeholder="coming soon...">
                        <button type="submit" class="btn btn-primary float-end my-3">Unlock</button>

                    </div>
                </div>
                <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                    <div class="container text-center my-5">
                        coming soon...
                    </div>
                </div>
            </div>

            <hr class="my-4">
        </div>
    </div>
    <div class="kbin-profile-transactions mt-lg-4">
        <h2 class="font-weight-bold">{{ 'transactions'|trans }}</h2>
        {% if transactions|length %}
            <div class="table-responsive">
                <table class="table align-middle small">
                    <tbody>
                    {% for transaction in transactions %}

                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {# {% if(threads.haveToPaginate) %} #}
            {# {{ pagerfanta(transactions, null, {'pageParameter':'[p]'}) }} #}
            {# {% endif %} #}
        {% else %}
            {{ not_found_transactions() }}
        {% endif %}
        <hr>

    </div>
</div>
