{% if subject is entry %}
    {{ component('entry', {entry: subject, showMagazine: true}) }}
{% elseif subject is entry_comment %}
    {{ component('entry_comment', {comment: subject, withParent: true}) }}
{% elseif subject is post %}
    {{ component('post', {post: subject, showMagazine: true}) }}
{% elseif subject is post_comment %}
    {{ component('post_comment',{comment: subject, withParent: true}) }}
{% elseif subject is magazine %}
    {{ component('magazine',{magazine: subject}) }}
{% endif %}
