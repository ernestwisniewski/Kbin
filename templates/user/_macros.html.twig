{% use 'user/_user.html.twig' %}

{%- macro avatar(user, options) -%}
    {%- with {
        user: user,
        width: options.width ?? null
        } only -%}
        {{ block('avatar') }}
    {%- endwith -%}
{%- endmacro -%}

{%- macro user(user, options) -%}
    {%- with {
        user: user,
        prefix: options.prefix ?? true,
        bolded: options.bolded ?? false
        } only -%}
        {{ block('user') }}
    {%- endwith -%}
{%- endmacro -%}
