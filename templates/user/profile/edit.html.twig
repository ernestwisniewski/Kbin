{% extends 'base.html.twig' %}

{% block title %}Edytuj profil | {{ parent() }}{% endblock %}

{% block body %}
    <div class="kbin-profile kbin-profile-edit-page">
        {% include 'user/profile/_tabs.html.twig' %}

        <div class="kbin-profile-edit mt-lg-4">
            <div class="kbin-magazine-background"></div>

            <div class="row">
                <h2 class="font-weight-bold">Edytuj profil</h2>
                <div class="col-lg-6 mb-3">
                    {% include 'user/profile/_form_user.html.twig' %}
                </div>

                <h5 class="mb-3">Zmień hasło</h5>
                <h5 class="mb-3">Zmień email</h5>
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    {% include 'user/_sidebar.html.twig' with {user: app.user} %}
    {% include 'user/profile/_sidebar.html.twig' %}
    {{ parent() }}
    <div class="mb-4">
        {% include 'user/_moderator_list_card.html.twig'with {user: app.user} %}
    </div>
{% endblock %}
